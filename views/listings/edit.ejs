<% layout("/layouts/boilerplate") %>


    <body>
        </b>
        <div class="row mt-3">
            <div class="col-8 offset-2">

                <h3>Edit Listing</h3>
                <br />
                <form action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                    method="POST">
                    <div class="mb-3">
                        <lable for="Title" class="form-lable">Title</lable>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control"
                            required />
                        <div class="valid-feedback">Title looks good!</div> <br />
                        <br />
                    </div>

                    <div class="mb-3">
                        <lable for="Description" class="form-lable">description</lable>
                        <textarea type="text" name="listing[description]" class="form-control"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">please enter suitable description...</div>
                        <br />
                    </div>


                    <div class="mb-3">
                        <lable for="Image" class="form-lable">Image</lable>
                        <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>" />
                        <div class="invalid-feedback">please enter correct url</div>
                        <br />
                    </div>

                    <div row>
                        <div mb-3 col-md-4>
                            <label for="Price" class="form-lable">Price</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control"
                                required />
                            <div class="invalid-feedback">please enter Right Price</div>
                            <br />

                            <div mb-3 col-md--8>
                                <lable for="Location" class="form-lable">location</lable>
                                <input type="text" name="listing[location]" class="form-control"
                                    value="<%= listing.location %>" required />
                                <div class="invalid-feedback">please enter suitable location...</div>
                                <br />

                            </div>
                        </div>

                        <div class="mb-3">
                            <lable for="Country" class="form-lable">country</lable>
                            <input type="text" name="listing[country]" class="form-control"
                                value="<%= listing.country %>" required />
                            <div class="invalid-feedback">please enter suitable country...</div>
                            <br /><br />
                        </div>

                        <br /><br />
                        <button type="submit" class="btn btn-dark btn-clr">Edit</button>
                </form>
    </body>

    </div>
    </div>
    </div>
    </div>

    </html>
    <script src="/javascripts/script.js"></script>
    