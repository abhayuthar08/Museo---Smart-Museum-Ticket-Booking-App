<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h3>Edit Listing</h3>
                <br />
                <form action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" method="POST">
                    <div class="mb-3">
                        <label for="Title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required />
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Please enter a suitable description...</div>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class="form-label">Image</label>
                        <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>" />
                        <div class="invalid-feedback">Please enter a correct URL</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required />
                            <div class="invalid-feedback">Please enter the correct price</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="Location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>" required />
                            <div class="invalid-feedback">Please enter a suitable location...</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>" required />
                        <div class="invalid-feedback">Please enter a suitable country...</div>
                    </div>

                    <button type="submit" class="btn btn-dark btn-clr">Edit</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/javascripts/script.js"></script>

    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
        }

        /* Container adjustments */
        .container {
            padding: 15px;
        }

        /* Responsive form layout */
        .row {
            margin-left: 0;
            margin-right: 0;
        }

        .form-control {
            width: 100%;
            box-sizing: border-box;
        }

        .btn {
            width: 100%;
        }

        /* Responsive styling */
        @media (max-width: 768px) {
            .col-md-8 {
                flex: 0 0 100%;
                max-width: 100%;
                padding-left: 15px;
                padding-right: 15px;
            }

            .col-md-6 {
                flex: 0 0 100%;
                max-width: 100%;
            }
        }

        /* Adjusting the spacing and feedback messages */
        .mb-3 {
            margin-bottom: 1rem;
        }

        .valid-feedback, .invalid-feedback {
            display: block;
        }

        .invalid-feedback {
            color: #dc3545;
        }

        .valid-feedback {
            color: #28a745;
        }

        /* Button styling */
        .btn-dark {
            background-color: #343a40;
            border: none;
            color: #fff;
        }

        .btn-dark.btn-clr {
            background-color: #212529;
            border: none;
        }
    </style>
</body>
