<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-10 offset-3"><h3>  <b><%= listing.title %></b> </h3> </div>
    <div class="card col-12 offset-3" style="width: 50rem;">
        <br />
            <img src="<%= listing.image %>" class="card-img-top show-img" style="height: 50vh;" alt="...">
            <div class="card-body">
              <p class="card-text">
                <br />
             
                <%= listing.description %> <br />
                &#8377; <%= listing.price.toLocaleString("en-IN") %>/night <br />
                <%= listing.location %> <br />
                <%= listing.country %> <br />
             </p>
            </div>
          </div>
   
    
        
        
    </div>
     <br />
    <div class="col-2 offset-3 btndiv mt-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark btns">Edit </a>
    <br /> <br />
    <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE">
        <button class="btn btn-dark btns">Delete</button>
    </form>
    </div>

    <div class="col-8 offset-3"><br /><hr /><br />
        <h4><b>Leave a Review</b></h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
            <div> <br />
                <label for="rating"  class="form-lable" >Rating</label>
                <input type="range" min="1" max="5" id="rating"  name="review[rating]" class="form-range">
            </div>
            <div> <br />
                <label for="comment"  class="form-lable" >Comment</label>
                <textarea name="reviews[comment]" rows="5" class="form-control" id="comment" required></textarea>
                <div class="inalid-feedbaack">please submit </div>
            </div><br />

            <button class="btn btn-dark btns">Submit</button><br /><br />
        </form>
    </div>

           
    </div>
</body>
</html>